{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext", // Use Node.js ESM module system
    "moduleResolution": "NodeNext", // Use Node.js ESM resolution (includes .js extensions)
    "target": "ES2022", // Ensure modern JS features
    "strict": true
  },
  "exclude": [
    "node_modules",
  ]
}
